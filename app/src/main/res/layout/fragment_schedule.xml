<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:background="@color/gray"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/mondayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/mondayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="monday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/tuesdayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/tuesdayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="tuesday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/wednesdayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/wednesdayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="wednesday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/thursdayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/thursdayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="thursday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/fridayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/fridayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="friday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/saturdayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/saturdayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="saturday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center" />

            <ScrollView
                android:id="@+id/sundayScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/sundayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No training session today"
                    android:textColor="@color/black"
                    android:tag="sunday"
                    android:textSize="20dp"/>

            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textSize="20sp" />

</LinearLayout>
